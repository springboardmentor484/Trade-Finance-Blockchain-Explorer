# Database Configuration
DATABASE_URL=sqlite:///./database.db
# For PostgreSQL: postgresql://user:password@localhost/trade_finance

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# S3/Object Storage Configuration
S3_BUCKET_NAME=trade-finance-documents
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_ENDPOINT_URL=https://s3.amazonaws.com

# External API Keys (Optional - for production)
# UNCTAD_API_KEY=your-unctad-key
# WTO_API_KEY=your-wto-key
# WORLDBANK_API_KEY=your-worldbank-key
# EXCHANGERATE_API_KEY=your-exchangerate-key

# Application Settings
APP_NAME=Trade Finance Blockchain Explorer
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (for alerts)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@tradefi.com

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Integrity Check Schedule (in seconds)
INTEGRITY_CHECK_INTERVAL=3600  # 1 hour
